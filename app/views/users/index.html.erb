<p id="notice"><%= notice %></p>

<h1><%= t("users") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('first_name')%></th>
      <th><%= t('last_name')%></th>
      <th><%= t('username')%></th>
      <th><%= t('password')%></th>
      <th><%= t('email')%></th>
      <th><%= t('status')%></th>
      <th><%= t('created_by')%></th>
      <th><%= t('created_at')%></th>
      <th><%= t('updated_by')%></th>
      <th><%= t('updated_at')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td><%= user.status %></td>
        <td><%= user.created_by %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_by %></td>
        <td><%= user.updated_at %></td>
        <td><%= link_to t('show'), user_path(user) %></td>
        <td><%= link_to t('edit'), edit_user_path(user) %></td>
        <td><%= link_to t('destroy'), user, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

